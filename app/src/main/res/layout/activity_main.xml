<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.MainActivity"

    android:id="@+id/mainActivity_global">

    <ImageView
    android:id="@+id/image_smiley"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/button_container">

        <ImageButton
            android:id="@+id/Addcomments_button"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_note_add_black"
            android:layout_gravity="start"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/History_button"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_history_black"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/piechart_button"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_piechart"
            android:visibility="invisible"
            android:background="@android:color/transparent"/>
    </FrameLayout>

</FrameLayout>